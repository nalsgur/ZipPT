<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        app:cardCornerRadius="14dp"
        android:backgroundTint="@color/darker_gray">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/profile_iv"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/like_profile"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="TODO" />
            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trainer_name2"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/profile_iv"
                app:layout_constraintStart_toStartOf="@id/profile_iv"
                app:layout_constraintEnd_toEndOf="@id/profile_iv"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시리우스"
                android:textSize="10sp"
                app:layout_constraintTop_toBottomOf="@id/name_tv"
                app:layout_constraintStart_toStartOf="@id/name_tv"
                app:layout_constraintEnd_toEndOf="@id/name_tv"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="14dp"
        android:backgroundTint="@color/darker_gray">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/profile_iv_2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/like_profile"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="TODO" />
            <TextView
                android:id="@+id/name_tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trainer_name2"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/profile_iv_2"
                app:layout_constraintStart_toStartOf="@id/profile_iv_2"
                app:layout_constraintEnd_toEndOf="@id/profile_iv_2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시리우스"
                android:textSize="10sp"
                app:layout_constraintTop_toBottomOf="@id/name_tv_2"
                app:layout_constraintStart_toStartOf="@id/name_tv_2"
                app:layout_constraintEnd_toEndOf="@id/name_tv_2"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>