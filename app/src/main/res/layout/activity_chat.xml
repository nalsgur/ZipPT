<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/chat_main_logo_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/chat_main_logo_img"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/chat_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="익명님"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@id/chat_main_logo_img"
        app:layout_constraintStart_toEndOf="@id/chat_main_logo_img"/>

    <ImageView
        android:id="@+id/chat_charge_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/chat_charge_button"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/chat_remain_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1,000pt"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@id/chat_charge_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>