<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.chat.QuestionFragment">

    <ImageView
        android:id="@+id/question_backbtn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/question_backbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/question_trainner_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나민혁 트레이너"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:src="@drawable/question_line"
        app:layout_constraintTop_toBottomOf="@id/question_backbtn"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/question_camarabtn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/question_camarabtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp" />

    <ImageView
        android:id="@+id/question_moviebtn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/question_moviebtn"
        app:layout_constraintStart_toEndOf="@id/question_camarabtn"
        app:layout_constraintTop_toTopOf="@id/question_camarabtn"
        android:layout_marginLeft="20dp" />

    <ImageView
        android:id="@+id/question_inputbox"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:src="@drawable/question_inputbox"
        app:layout_constraintStart_toEndOf="@id/question_moviebtn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/question_inputet"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="@null"
        app:layout_constraintTop_toTopOf="@id/question_inputbox"
        app:layout_constraintBottom_toBottomOf="@id/question_inputbox"
        app:layout_constraintStart_toStartOf="@id/question_inputbox" />

    <ImageView
        android:id="@+id/question_nextbtn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/question_nextbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp" />







</androidx.constraintlayout.widget.ConstraintLayout>