<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Login.LogoActivity">

    <ImageView
        android:id="@+id/login_logo_iv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/login_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="150dp" />

    <ImageView
        android:id="@+id/login_user_background"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:src="@drawable/login_selectbackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_logo_iv"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"/>

    <ImageView
        android:id="@+id/login_user_radiobtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/login_radio_unselect"
        app:layout_constraintStart_toStartOf="@id/login_user_background"
        app:layout_constraintTop_toTopOf="@id/login_user_background"
        app:layout_constraintBottom_toBottomOf="@id/login_user_background"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_user_tv"
        app:layout_constraintStart_toEndOf="@id/login_user_radiobtn"
        app:layout_constraintTop_toTopOf="@id/login_user_radiobtn"
        app:layout_constraintBottom_toBottomOf="@id/login_user_radiobtn"
        android:text="회원"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:src="@drawable/login_selectbackground"
        app:layout_constraintStart_toEndOf="@id/login_user_background"
        app:layout_constraintTop_toTopOf="@id/login_user_background"
        android:id="@+id/login_trainner_background"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/login_trainner_radiobtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/login_radio_select"
        app:layout_constraintTop_toTopOf="@id/login_trainner_background"
        app:layout_constraintStart_toStartOf="@id/login_trainner_background"
        app:layout_constraintBottom_toBottomOf="@id/login_trainner_background"
        android:layout_marginLeft="20dp" />




    <TextView
        android:id="@+id/login_trainner_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="트레이너"
        app:layout_constraintStart_toEndOf="@id/login_trainner_radiobtn"
        app:layout_constraintTop_toTopOf="@id/login_trainner_radiobtn"
        app:layout_constraintBottom_toBottomOf="@id/login_trainner_radiobtn"
        android:layout_marginLeft="10dp" />


    <ImageView
        android:id="@+id/login_id_iv"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:src="@drawable/login_input"
        app:layout_constraintTop_toBottomOf="@id/login_trainner_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>
    <EditText
        android:id="@+id/login_id_et"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:hint="아이디를 입력하세요."
        app:layout_constraintTop_toTopOf="@id/login_id_iv"
        app:layout_constraintStart_toStartOf="@id/login_id_iv"
        app:layout_constraintBottom_toBottomOf="@id/login_id_iv"
        android:background="@null"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/login_pw_iv"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:src="@drawable/login_input"
        app:layout_constraintTop_toBottomOf="@id/login_id_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/login_pw_et"
        android:layout_width="240dp"
        android:layout_height="24dp"
        android:hint="패스워드를 입력하세요."
        android:background="@null"
        app:layout_constraintTop_toTopOf="@id/login_pw_iv"
        app:layout_constraintBottom_toBottomOf="@id/login_pw_iv"
        app:layout_constraintStart_toStartOf="@id/login_pw_iv"
        android:layout_marginLeft="20dp" />

    <ImageView
        android:id="@+id/login_loginbtn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:src="@drawable/login_loginbutton"
        app:layout_constraintTop_toBottomOf="@id/login_pw_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textColor="@color/white"
        android:textSize="12dp"
        app:layout_constraintTop_toTopOf="@id/login_loginbtn"
        app:layout_constraintStart_toStartOf="@id/login_loginbtn"
        app:layout_constraintEnd_toEndOf="@id/login_loginbtn"
        app:layout_constraintBottom_toBottomOf="@id/login_loginbtn"/>

    <TextView
        android:id="@+id/login_signbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textColor="@color/nagray"
        app:layout_constraintTop_toBottomOf="@id/login_loginbtn"
        app:layout_constraintStart_toStartOf="@id/login_loginbtn"
        app:layout_constraintEnd_toEndOf="@id/login_loginbtn" />




</androidx.constraintlayout.widget.ConstraintLayout>